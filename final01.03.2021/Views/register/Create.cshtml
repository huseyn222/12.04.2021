@model final01._03._2021.Models.login

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}









@using (Html.BeginForm())
{
<div class="container">




    @Html.AntiForgeryToken()
    <div class="c33" style="margin-top: 30vh;">


        <div style="text-align: center;">
            <h1>QEYDIYAT</h1>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div style="text-align: center;" class="form-group">
                @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div style="text-align: center;" class="form-group">
                @Html.LabelFor(model => model.parol, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.parol, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.parol, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">

                    <div class="form-group">
                        <div class="nnv">
                            <button onclick="myFunction()">QEYDIYATDAN KECIN</button>

                        </div>
                    </div>




                    <p id="demo"></p>

                    <script>
                        function myFunction() {
                            var txt;
                            if (confirm("QEYDIYATDAN KECDIZ")) {
                                txt = "QEYDIYATDAN KECDIZ";
                            }
                            else {
                                txt = "xanani doldurun";
                            }
                            document.getElementById("demo").innerHTML = txt;
                        }
                    </script>

                </div>
            </div>
        </div>


    </div>




</div>


















}
